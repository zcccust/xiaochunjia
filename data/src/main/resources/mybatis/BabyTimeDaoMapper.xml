<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xiaochunjia.data.dao.BabyTimeDao">
	<select id="findAll" resultType="com.xiaochunjia.data.model.BabyTime">
		select * from babytime where isDelete=0;
	</select>
	<select id="findByPage" resultType="com.xiaochunjia.data.model.BabyTime">
		SELECT id,title,imageUrl,description
		FROM babytime
		WHERE isDelete=0
		ORDER BY publishDate DESC
		LIMIT #{0},#{1}
	</select>
	<select id="get" resultType="com.xiaochunjia.data.model.BabyTime">
		SELECT *
		FROM babytime
		WHERE id=#{0}
	</select>
	<insert id="add" parameterType="com.xiaochunjia.data.model.BabyTime"
			useGeneratedKeys="true" keyProperty="id">
		insert into babytime(title,imageUrl,description,content,age,publishDate)
		values(#{title},#{imageUrl},#{description},#{content},#{age},#{publishDate})
	</insert>
	<update id="delete">
		update babytime
		set isDelete=1
		where id = #{0}
	</update>
</mapper>